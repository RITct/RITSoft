        $resul=mysql_query("select reg_id,adm_no,classid,apl_status,previous_sem,new_sem,apv_status,remarks from stud_sem_registration,current_class where classid='$classid' and current_class.studid=stud_sem_registration.adm_no and apv_status='Approved by HOD' order by current_class.rollno ");
        while($dat=mysql_fetch_array($resul))
        {
            $adm_no=$dat["adm_no"];
